<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <!-- Background -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome_bg" />

    <!-- Kotak putih transparan mentok bawah -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Hai, Budgetista!"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/cormorant_garamond_regular"/>

        <TextView
            android:id="@+id/welcome_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Saatnya upgrade gaya kamu! Scroll sekarang dan temukan outfit kece yang bikin kamu standout di mana pun kamu berada."
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/cormorant_garamond_regular"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#DEDDDD"
            android:text="Mulai Disini"
            android:textAllCaps="false"
            android:textColor="#010101"
            android:textStyle="bold"
            android:fontFamily="@font/cormorant_garamond_regular" />

    </LinearLayout>
</FrameLayout>
